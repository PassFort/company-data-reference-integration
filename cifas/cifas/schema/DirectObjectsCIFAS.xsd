    </xsd:appinfo>
  </xsd:annotation>
  <xsd:include schemaLocation="DirectElementsGeneric.xsd"/>
  <xsd:include schemaLocation="DirectElementsCIFAS.xsd"/>

  <xsd:element name="CaseLookupRequest">
    <xsd:annotation>
      <xsd:documentation>
        Retrieve summary details of a Case, based on its Id.
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="Lookup" minOccurs="1" maxOccurs="1"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="CaseLookupResponse">
    <xsd:annotation>
      <xsd:documentation>
        Following a successful lookup, full details are returned. 
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="MemberSearchReference" minOccurs="1" maxOccurs="1"/>
        <xsd:element ref="FINDsearchReference" minOccurs="1" maxOccurs="1"/>
        <xsd:element ref="FullCaseDetail" minOccurs="0" maxOccurs="1" />
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="BasicSearchRequest">
    <xsd:annotation>
      <xsd:documentation>
        A standard search where only basic details are required to be returned
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="Search" minOccurs="1" maxOccurs="1"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="BasicSearchResponse">
    <xsd:annotation>
      <xsd:documentation>
        Following a successful search, basic details of all matched Cases
        are returned.
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="MemberSearchReference" minOccurs="1" maxOccurs="1"/>
        <xsd:element ref="FINDsearchReference" minOccurs="1" maxOccurs="1"/>
        <xsd:element ref="SearchFeedback" minOccurs="1" maxOccurs="1"/>
        <xsd:element name="BasicSearchResult" minOccurs="0" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element ref="BasicCaseDetail" minOccurs="1" maxOccurs="1" />
              <xsd:element ref="DMRoutcome" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
        <xsd:element ref="CaseLink" minOccurs="0" maxOccurs="1"/>
        <xsd:element ref="Location" minOccurs="0" maxOccurs="1"/>
        <xsd:element ref="EnhancedAnalytics" minOccurs="0" maxOccurs="1"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="FullSearchRequest">
    <xsd:annotation>
      <xsd:documentation>
        A standard search where summary details are required to be returned
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="Search" minOccurs="1" maxOccurs="1"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="FullSearchResponse">
    <xsd:annotation>
      <xsd:documentation>
        Following a successful search, summary details of all matched Cases
        are returned.
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="MemberSearchReference" minOccurs="1" maxOccurs="1"/>
        <xsd:element ref="FINDsearchReference" minOccurs="1" maxOccurs="1"/>
        <xsd:element ref="SearchFeedback" minOccurs="1" maxOccurs="1"/>
        <xsd:element name="FullSearchResult" minOccurs="0" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element ref="FullCaseDetail" minOccurs="1" maxOccurs="1" />
              <xsd:element ref="DMRoutcome" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
        <xsd:element ref="CaseLink" minOccurs="0" maxOccurs="1"/>
        <xsd:element ref="Location" minOccurs="0" maxOccurs="1"/>
        <xsd:element ref="EnhancedAnalytics" minOccurs="0" maxOccurs="1"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

</xsd:schema>
